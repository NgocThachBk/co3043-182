<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="15dp"
    android:layout_height="130dp"
    card_view:cardCornerRadius="4dp"
    android:layout_marginTop="20dp"
    android:elevation="2dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/item_detail_place">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="4">

            <ImageView
                android:id="@+id/imgPlaceFragment"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:src="@drawable/hoadalat2"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/colorClock"
                android:text="08:00"
                android:textColor="@color/backgroundTab"
                android:textAlignment="center"
                android:id="@+id/tvTime"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:layout_marginLeft="8dp">
            <TextView
                android:id="@+id/textName"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:text="Rừng hoa khô Đà Lạt"
                android:layout_weight="1"
                android:textColor="@color/colorTextBlack"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:text="T/g tham quan : 45p"
                android:layout_weight="1"
                android:id="@+id/timeThamQuan"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:text="Ghi chú"
                android:textSize="14dp"
                android:textColor="@color/colorText"
                android:textAlignment="textStart"
                android:background="@null"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>